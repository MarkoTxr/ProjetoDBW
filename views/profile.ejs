<!DOCTYPE html>
<html lang="pt">
  <head>
    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/header") %>

    <div class="container main-content">
      <div class="form-container-tabs mx-auto" style="max-width: 700px">
        <h2 class="mb-4 text-center">Perfil do Utilizador</h2>

        <div
          class="card mb-4"
          style="background-color: #1e1e1e; border: 1px solid #555"
        >
          <div class="card-body">
            <!-- Imagem de perfil -->
            <div class="d-flex flex-column align-items-center text-center mb-4">
              <img
                src="<%= user.imagemPerfil %>"
                alt="Imagem de Perfil"
                class="rounded-circle pfp-image"
                width="120"
                height="120"
                
              />
              <div class="mt-2 text-light"><strong><%= user.nick || 'Sem Nickname' %></strong></div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-4">
                <h6 class="mb-0 text-light">Nome Completo:</h6>
              </div>
              <div class="col-sm-8 text-light">
                <%= user.nome || 'N達o definido' %>
              </div>
            </div>
            <hr style="border-top: 1px solid #555" />
            <div class="row mb-3">
              <div class="col-sm-4">
                <h6 class="mb-0 text-light">Nickname:</h6>
              </div>
              <div class="col-sm-8 text-light">
                <%= user.nick || 'N達o definido' %>
              </div>
            </div>
            <hr style="border-top: 1px solid #555" />
            <div class="row mb-3">
              <div class="col-sm-4">
                <h6 class="mb-0 text-light">Email:</h6>
              </div>
              <div class="col-sm-8 text-light">
                <%= user.email || 'N達o definido' %>
              </div>
            </div>
          </div>
        </div>

        <h4 class="mb-3 text-center">Minhas Salas</h4>
        <div class="list-group mb-4">
          <% if (user.salasCriadas && user.salasCriadas.length > 0) { %>
            <% user.salasCriadas.forEach(function(sala) { %>
              <a
                href="/sala/<%= sala.id %>"
                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                style="background-color: #1e1e1e; border-color: #555; color: #ffffff;"
              >
                <%= sala.nome %>
                <span class="badge bg-primary rounded-pill">
                  <%= sala.participantes %> participantes
                </span>
              </a>
            <% }); %>
          <% } else { %>
            <p class="text-center text-muted">Ainda n達o criou nenhuma sala.</p>
          <% } %>
        </div>

        <div class="text-center">
          <a href="/editar-perfil" class="btn btn-custom">Editar Perfil</a>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
