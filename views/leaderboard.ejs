<!DOCTYPE html>
<html lang="pt">
<head>
  <%- include("partials/head") %>
  <title>Leaderboard</title>
   <style>
        .pagination .page-link {
      background-color: #2c2c2c;
      color: #fff;
      border: 1px solid #3a3a3a;
      transition: background-color 0.2s;
    }
    .btn-custom {
      background-color: #2c2c2c;
      color: #ffffff;
      border: 1px solid #3a3a3a;
      transition: all 0.2s ease-in-out;
    }

    .btn-custom:hover, .btn-custom.active {
      background-color: #016d05;
      border-color: #016d05;
      color: white;
    }
    .pagination .page-link:hover {
      background-color: #016d05;
      color: white;
      border-color: #016d05;
    }
    .table thead th {
      background-color: #222;
      color: #ffffff;
      border-bottom: 2px solid #444;
    }
    .table tbody tr:hover {
      background-color: #2a2a2a;
      cursor: pointer;
    }
     .table tbody tr:hover {
      background-color: #2a2a2a;
      cursor: pointer;
    }
    .pagination .disabled .page-link {
      background-color: #1c1c1c;
      color: #555;
      border-color: #333;
      cursor: not-allowed;
    }
    </style>
</head>
<body>
  <%- include("partials/header") %>

  <div class="container main-content mt-4">
    <div class="row mb-4">
      <div class="col text-center">
        <h1 class="text-light">üèÜ Leaderboard</h1>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <!-- Bot√µes de M√©tricas -->
            <div class="btn-group mb-4 w-100" role="group" aria-label="Sele√ß√£o de m√©tricas">
              <button type="button" class="btn btn-custom active" data-metrica="ideias">Ideias Contribu√≠das</button>
              <button type="button" class="btn btn-custom" data-metrica="sessoes">Sess√µes Participadas</button>
            </div>

            <!-- Tabela -->
            <div id="leaderboardContainer" class="table-responsive">
              <table class="table table-dark table-striped table-hover align-middle">
                <thead>
                  <tr>
                    <th>Posi√ß√£o</th>
                    <th>Nick</th>
                    <th>Ideias</th>
                    <th>Sess√µes</th>
                    <th id="metricaHeader">Valor</th>
                  </tr>
                </thead>
                <tbody id="leaderboardBody"></tbody>
              </table>

              <!-- Pagina√ß√£o -->
              <nav>
                <ul class="pagination justify-content-center">
                  <li class="page-item" id="prevPage">
                    <a class="page-link" href="#">Anterior</a>
                  </li>
                  <li class="page-item disabled">
                    <span class="page-link" id="currentPage">P√°gina 1</span>
                  </li>
                  <li class="page-item" id="nextPage">
                    <a class="page-link" href="#">Pr√≥xima</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/footer") %>

  <script>
    let currentPage = 1;
    let maxPage = 1;
    let currentMetrica = 'ideias';

    async function loadLeaderboard(page, metrica = currentMetrica) {
      try {
        const response = await fetch(`/api/leaderboard?page=${page}&metrica=${metrica}`);
        const result = await response.json();

        if (!result.success) throw new Error(result.message);

        maxPage = result.totalPages;
        currentMetrica = result.metrica;
        
        const tbody = document.getElementById('leaderboardBody');
        tbody.innerHTML = '';

        result.data.forEach((user, index) => {
          const posicao = (page - 1) * 20 + index + 1;
          const row = `
            <tr>
              <td>${posicao}</td>
              <td>${user.nick}</td>
              <td>${user.metricas.ideiasContribuidas}</td>
              <td>${user.metricas.sessoesParticipadas}</td>
              <td>${user.valorMetrica}</td>
            </tr>`;
          tbody.innerHTML += row;
        });

        document.getElementById('currentPage').textContent = `P√°gina ${page}`;
        document.getElementById('prevPage').classList.toggle('disabled', page === 1);
        document.getElementById('nextPage').classList.toggle('disabled', page === maxPage);
        
        // Atualiza bot√µes ativos
        document.querySelectorAll('.btn-group .btn').forEach(btn => {
          btn.classList.remove('active');
          if (btn.dataset.metrica === metrica) btn.classList.add('active');
        });

      } catch (err) {
        console.error('Erro ao carregar leaderboard:', err);
        alert('Erro ao carregar dados!');
      }
    }

    // Event Listeners
    document.getElementById('prevPage').addEventListener('click', (e) => {
      e.preventDefault();
      if (currentPage > 1) loadLeaderboard(--currentPage);
    });

    document.getElementById('nextPage').addEventListener('click', (e) => {
      e.preventDefault();
      if (currentPage < maxPage) loadLeaderboard(++currentPage);
    });

    document.querySelectorAll('.btn-group .btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        currentPage = 1;
        loadLeaderboard(1, btn.dataset.metrica);
      });
    });

    // Carrega inicialmente
    loadLeaderboard(currentPage);
  </script>
</body>
</html>