<!DOCTYPE html>
<html lang="pt">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container main-content">
    <div class="form-container-tabs mx-auto">
      <ul class="nav nav-tabs nav-justified mb-4" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="entrar-sala-tab" data-bs-toggle="tab" data-bs-target="#entrar-sala-pane" type="button" role="tab" aria-controls="entrar-sala-pane" aria-selected="true">Entrar em uma Sessão</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="criar-sala-tab" data-bs-toggle="tab" data-bs-target="#criar-sala-pane" type="button" role="tab" aria-controls="criar-sala-pane" aria-selected="false">Criar Sessão</button>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <!-- Entrar em uma Sessão Tab -->
        <div class="tab-pane fade show active" id="entrar-sala-pane" role="tabpanel" aria-labelledby="entrar-sala-tab" tabindex="0">
          <form action="/sessoes/entrar" method="POST">
            <div class="mb-3">
              <label for="codigoSala" class="form-label">Código da Sessão</label>
              <input type="text" name="codigoSala" id="codigoSala" class="form-control" placeholder="Digite o código da sessão" required>
            </div>
            <div class="mb-3">
              <label for="senha" class="form-label">Senha (se necessário)</label>
              <input type="password" name="senha" id="senha" class="form-control" placeholder="Digite a senha se a sessão for protegida">
            </div>
            <button type="submit" class="btn btn-custom w-100">Entrar na Sessão</button>
          </form>
        </div>
        <!-- Criar Sessão Tab -->
        <div class="tab-pane fade" id="criar-sala-pane" role="tabpanel" aria-labelledby="criar-sala-tab" tabindex="0">
          <div class="text-center mb-3">
            <a href="/sessoes/criar" class="btn btn-custom w-100">Criar Nova Sessão</a>
          </div>
          <div class="text-center">
            <a href="/sessoes" class="btn btn-outline-secondary w-100">Ver Sessões Disponíveis</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
